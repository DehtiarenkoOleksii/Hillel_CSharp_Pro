@model HW11_Notes_Contacts_MVC.Models.Note

<h1>Delete Note</h1>
<p>Are you sure you want to delete this note?</p>

<p><strong>Title:</strong> @Model.Title</p>
<p><strong>Tags:</strong> @Model.Tags</p>
<p><strong>Content:</strong> @Model.Content</p>

<form asp-action="Delete" method="post">
    <input type="hidden" name="Id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index", "Notes")" class="btn btn-secondary">Cancel</a>
</form>
